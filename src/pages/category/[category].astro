---
import { getCollection } from 'astro:content'
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  // 获取所有文章并提取唯一分类
  const allPosts = await getCollection('posts');
  const categories = [...new Set(allPosts.map(post => post.data.category || 'tech'))];

  // 为每个分类生成路径
  return categories.map(category => ({
    params: { category },
    props: { category, allPosts }
  }));
}

const { category } = Astro.params;
const allPosts = Astro.props.allPosts;

// 过滤当前分类的文章
const categoryPosts = allPosts.filter(post => post.data.category === category);
const sortedPosts = categoryPosts.sort((a, b) => new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf());

const title = `${category.charAt(0).toUpperCase() + category.slice(1)} Category`;
const description = `Articles in the ${category} category.`;
const permalink = `${Astro.site.href}category/${category}`;

// 定义状态标签
const statusLabels = {
  'to-read': 'To Read',
  'reading': 'Reading',
  'finished': 'Finished',
  'abandoned': 'Abandoned'
};

// 获取所有唯一分类用于导航
const allCategories = [...new Set(allPosts.map(post => post.data.category || 'tech'))];

// 为所有书籍分类准备数据，客户端将处理过滤
const allBooksData = JSON.stringify(sortedPosts.map(post => ({
  ...post,
  data: {
    ...post.data,
    publishDate: post.data.publishDate instanceof Date
      ? post.data.publishDate.toISOString()
      : post.data.publishDate
  }
})));
---

<BaseLayout title={title} description={description} permalink={permalink} current="category">
  <div class="container">

    <!-- 显示分类文章 -->
    {sortedPosts.length > 0 ? (
      category === 'books' ? (
        // 书籍分类使用标签页布局，通过客户端JavaScript处理过滤
        <div class="books-container">
          <div class="books-tabs">
            {['all', 'to-read', 'reading', 'finished', 'abandoned'].map(status => {
              const count = status === 'all'
                ? sortedPosts.length
                : sortedPosts.filter(post => post.data.readingStatus === status).length;

              return (
                <button
                  class="tab-button"
                  data-status={status}
                >
                  {status === 'all' ? 'All' : statusLabels[status]}
                  <span class="tab-count">{count}</span>
                </button>
              );
            })}
          </div>

          <div class="books-grid" id="books-grid">
            {sortedPosts.map((post) => {
              return (
                <div
                  class="book-card visible"
                  data-status={post.data.readingStatus || 'to-read'}
                >
                  <div>
                    {post.data.coverImage ? (
                      <img
                        src={post.data.coverImage}
                        alt={post.data.title}
                        class="book-cover"
                        onError={(e) => {
                          // 如果图片加载失败，显示占位图
                          e.target.src = '/images/books/placeholder.svg';
                        }}
                      />
                    ) : (
                      <div class="book-cover-placeholder">
                        <span>No Cover</span>
                      </div>
                    )}

                    <div class="book-info">
                      <h3>{post.data.title}</h3>
                    </div>
                  </div>
                </div>
              )
            })}
          </div>
        </div>
      ) : (
        // 非书籍分类使用原始布局
        sortedPosts.map((post, index) => {
          const href = `/post/${post.data.slug}`;
          return (
            <div>
              { index !== 0 && <hr /> }
              <div class="post-item">
                <h2>
                  <a href={href}>{post.data.title}</a>
                </h2>
                <div class="post-item-footer">
                  <span class="post-item-date">— {post.data.publishDate}</span>
                  <span class="post-category">— {post.data.category}</span>
                </div>
              </div>
            </div>
          )
        })
      )
    ) : (
      <p>No posts found in this category.</p>
    )}
  </div>
</BaseLayout>

<script>
  // 初始化书本过滤功能
  function initBookFilter() {
    // 获取所有标签按钮和书籍卡片
    const tabButtons = document.querySelectorAll('.tab-button');
    const bookCards = document.querySelectorAll('.book-card');

    if (tabButtons.length === 0 || bookCards.length === 0) {
      // 如果元素尚未就绪，稍后重试
      setTimeout(initBookFilter, 100);
      return;
    }

    // 从URL中获取初始状态参数
    const urlParams = new URLSearchParams(window.location.search);
    let currentStatus = urlParams.get('status') || 'all';

    // 更新标签高亮状态
    function updateActiveTab() {
      tabButtons.forEach(button => {
        const status = button.getAttribute('data-status');
        if (status === currentStatus) {
          button.classList.add('active');
        } else {
          button.classList.remove('active');
        }
      });
    }

    // 过滤显示的书籍
    function filterBooks() {
      bookCards.forEach(card => {
        const status = card.getAttribute('data-status');
        if (currentStatus === 'all' || status === currentStatus) {
          card.classList.remove('hidden');
          setTimeout(() => {
            card.classList.add('visible');
          }, 10); // 小延迟确保transition生效
        } else {
          card.classList.remove('visible');
          setTimeout(() => {
            card.classList.add('hidden');
          }, 10); // 小延迟确保transition生效
        }
      });
    }

    // 更新URL参数
    function updateURL(status) {
      const url = new URL(window.location);
      if (status === 'all') {
        url.searchParams.delete('status');
      } else {
        url.searchParams.set('status', status);
      }
      window.history.replaceState({}, '', url);
    }

    // 为所有标签按钮添加点击事件
    tabButtons.forEach(button => {
      // 移除可能已存在的事件监听器
      const newButton = button.cloneNode(true);
      button.parentNode.replaceChild(newButton, button);

      // 添加新的事件监听器
      newButton.addEventListener('click', (e) => {
        e.preventDefault(); // 阻止默认行为
        currentStatus = newButton.getAttribute('data-status');
        updateActiveTab();
        filterBooks();
        updateURL(currentStatus);
      });
    });

    // 初始化时设置正确的标签状态和过滤
    updateActiveTab();
    filterBooks();
  }

  // 使用 Astro 的页面加载事件，确保在页面导航后也能正确初始化
  document.addEventListener("astro:page-load", initBookFilter);

  // 在初始页面加载时初始化
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initBookFilter);
  } else {
    // 如果页面已经加载完成，直接初始化
    initBookFilter();
  }
</script>

<style>
