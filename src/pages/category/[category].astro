    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease, opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1), visibility 0.3s ease;
    height: fit-content;
    opacity: 1;
    will-change: opacity, transform;
  }

  .book-card.hidden {
    opacity: 0;
    visibility: hidden;
    transform: translateY(15px) scale(0.98);
