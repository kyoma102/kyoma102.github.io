---
import { getCollection } from 'astro:content'
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'My Astro Blog';
const description = 'The perfect starter for your perfect blog.';
const permalink = Astro.site.href;

// 获取所有文章
let allPosts = await getCollection('posts');
// 按分类分组
const postsByCategory = {};
allPosts.forEach(post => {
  const category = post.data.category || 'tech'; // 默认为tech
  if (!postsByCategory[category]) {
    postsByCategory[category] = [];
  }
  postsByCategory[category].push(post);
});

// 获取所有唯一分类
const categories = [...new Set(allPosts.map(post => post.data.category || 'tech'))];
---

<BaseLayout
  title={title}
  description={description}
  permalink={permalink}
  gaId={import.meta.env.PUBLIC_GA_ID}
  umamiWebsiteId={import.meta.env.PUBLIC_UMAMI_WEBSITE_ID}
  umamiSrc={import.meta.env.PUBLIC_UMAMI_SRC}
  plausibleDomain={import.meta.env.PUBLIC_PLAUSIBLE_DOMAIN}
  plausibleSrc={import.meta.env.PUBLIC_PLAUSIBLE_SRC}
>
  <div class="home-container">
    <div class="home-copy">
      <!-- 分类导航 -->
      <div class="categories-container">
        <div class="categories-grid">
          {categories.map(category => {
            const categoryPosts = postsByCategory[category] || [];
            return (
              <a href={`/category/${category}`} class="category-card">
                <div class="category-header">
                  <h3>{category.charAt(0).toUpperCase() + category.slice(1)}</h3>
                  <div class="post-count">{categoryPosts.length} posts</div>
                </div>
              </a>
            )
          })}
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .category-nav h2 {
    margin-bottom: 1.5rem;
    color: var(--p-text-color);
  }

  .categories-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .category-card {
    display: flex;
    flex-direction: column;
    height: 250px;
    padding: 1.5rem;
    border: 1px solid #d1d5db; /* 使用更明显的灰色边框 */
    border-radius: var(--p-border-radius-md);
    text-decoration: none;
    color: var(--p-text-color);
    transition: all var(--p-transition-duration);
    background-color: var(--p-surface-0);
    justify-content: center;
    align-items: center;
    text-align: center;
    width: 100%;
    max-width: 240px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .categories-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .categories-grid {
      grid-template-columns: 1fr;
    }
  }

  .category-card:hover {
    background-color: var(--p-surface-50);
    border-color: #9ca3af; /* 悬停时使用更深的灰色边框 */
    transform: translateY(-1px);
  }

  .category-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex: 1;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--p-surface-200);
  }

  .category-header h3 {
    margin: 0 0 0.5rem 0;
    color: var(--p-primary-700);
    font-size: 1.25rem;
  }

  .post-count {
    background-color: var(--p-emerald-100);
    color: var(--p-emerald-800);
    padding: 0.25rem 0.5rem;
    border-radius: var(--p-border-radius-sm);
    font-size: 0.875rem;
  }

  .latest-posts {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .post-preview {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 0;
    border-bottom: 1px dashed var(--p-surface-200);
    text-decoration: none;
    color: inherit;
  }

  .post-preview:hover {
    background-color: var(--p-surface-50);
    border-radius: var(--p-border-radius-sm);
  }

  .post-preview:last-child {
    border-bottom: none;
  }

  .post-title {
    flex: 1;
    color: var(--p-text-color);
    font-weight: 500;
  }

  .post-date {
    color: var(--p-text-muted-color);
    font-size: 0.875rem;
    margin-left: 1rem;
    white-space: nowrap;
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }

    .categories-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
