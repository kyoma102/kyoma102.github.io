---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Analytics Test';
const description = 'Test page for visitor analytics';
const permalink = Astro.site.href + 'analytics-test';
---

<BaseLayout 
  title={title} 
  description={description} 
  permalink={permalink}
  gaId="G-TEST123456"  // 示例ID，实际使用时替换为真实ID
  umamiWebsiteId="test-umami-id"
  umamiSrc="https://analytics.example.com/umami.js"
  plausibleDomain="example.com"
  plausibleSrc="https://analytics.example.com/js/plausible.js"
>
  <div style="padding: 2rem;">
    <h1>Analytics Test Page</h1>
    <p>This page tests the various analytics integrations in this template.</p>
    <ul>
      <li>Google Analytics: <code>G-TEST123456</code></li>
      <li>Umami Analytics: <code>test-umami-id</code></li>
      <li>Plausible Analytics: <code>example.com</code></li>
    </ul>
  </div>
</BaseLayout>